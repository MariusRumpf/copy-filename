{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true,
  },
  "parserOptions": {
    "sourceType": "module",
  },
  "globals": {
    "atom": false
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "indent": [2, 2],
    "strict": [2, "never"],
    "no-console": [0]
  }
}
